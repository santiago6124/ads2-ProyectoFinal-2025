# ============================================================================
# CryptoSim - Environment Variables Example
# ============================================================================
# Copia este archivo como .env y modifica los valores según tu entorno
# cp .env.example .env
# ============================================================================

# ----------------------------------------------------------------------------
# SECURITY & AUTHENTICATION
# ----------------------------------------------------------------------------
# JWT Secret (DEBE ser cambiado en producción)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-64-chars-minimum

# Internal API Key para comunicación entre servicios
INTERNAL_API_KEY=internal-secret-key-change-in-production

# ----------------------------------------------------------------------------
# DATABASE PASSWORDS
# ----------------------------------------------------------------------------
# MySQL (Users API)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_PASSWORD=password

# MongoDB (Orders, Portfolio, Wallet)
MONGO_PASSWORD=password

# ----------------------------------------------------------------------------
# EXTERNAL APIs
# ----------------------------------------------------------------------------
# CoinGecko API (para precios de criptomonedas)
COINGECKO_API_KEY=

# Binance API (opcional)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# ----------------------------------------------------------------------------
# MONITORING & LOGGING
# ----------------------------------------------------------------------------
# Grafana Admin Password
GRAFANA_PASSWORD=admin

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# ----------------------------------------------------------------------------
# ENVIRONMENT
# ----------------------------------------------------------------------------
# Environment (development, staging, production)
ENVIRONMENT=development

# ----------------------------------------------------------------------------
# CUSTOM PORTS (si necesitas cambiar puertos externos)
# ----------------------------------------------------------------------------
# USERS_API_PORT=8001
# ORDERS_API_PORT=8002
# SEARCH_API_PORT=8003
# MARKET_DATA_API_PORT=8004
# PORTFOLIO_API_PORT=8005
# WALLET_API_PORT=8006
# MYSQL_PORT=3306
# REDIS_PORT=6379
# RABBITMQ_PORT=5672
# RABBITMQ_MANAGEMENT_PORT=15672
# SOLR_PORT=8983
# MEMCACHED_PORT=11211

# ----------------------------------------------------------------------------
# FEATURE FLAGS
# ----------------------------------------------------------------------------
# Habilitar scheduler de cálculo de portfolios
SCHEDULER_ENABLED=true

# Habilitar RabbitMQ
RABBITMQ_ENABLED=true

# Habilitar CORS
CORS_ENABLED=true

# ----------------------------------------------------------------------------
# PERFORMANCE TUNING
# ----------------------------------------------------------------------------
# MongoDB Pool Sizes
MONGODB_MAX_POOL_SIZE=100
MONGODB_MIN_POOL_SIZE=10

# Redis Pool Size
REDIS_POOL_SIZE=10

# RabbitMQ Workers
RABBITMQ_WORKER_COUNT=5
RABBITMQ_PREFETCH_COUNT=10

# ----------------------------------------------------------------------------
# CACHE TTL (Time To Live)
# ----------------------------------------------------------------------------
# Portfolio Cache
CACHE_PORTFOLIO_TTL=1h
CACHE_PERFORMANCE_TTL=30m
CACHE_SNAPSHOT_TTL=24h

# Market Data Cache
MARKET_DATA_CACHE_TTL=30s

# ----------------------------------------------------------------------------
# FEE CONFIGURATION
# ----------------------------------------------------------------------------
# Trading Fees (porcentajes)
FEE_BASE_PERCENTAGE=0.001
FEE_MAKER=0.0008
FEE_TAKER=0.0012
FEE_MINIMUM=0.01
FEE_MAXIMUM=1000.0

# ----------------------------------------------------------------------------
# RATE LIMITING
# ----------------------------------------------------------------------------
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=1h

# ----------------------------------------------------------------------------
# TIMEOUTS
# ----------------------------------------------------------------------------
REQUEST_TIMEOUT=30s
API_TIMEOUT=30s
DB_CONNECTION_TIMEOUT=10s

# ----------------------------------------------------------------------------
# SOLR CONFIGURATION
# ----------------------------------------------------------------------------
SOLR_HEAP=1g
SOLR_COLLECTION=crypto_search

# ----------------------------------------------------------------------------
# MEMCACHED CONFIGURATION
# ----------------------------------------------------------------------------
MEMCACHED_MEMORY=256
MEMCACHED_CONNECTIONS=1024
